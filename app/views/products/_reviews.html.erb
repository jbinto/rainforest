<h3>Reviews</h3>

<h4>Reviews for <%= @product.name %></h4>

<% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    <em> by <%= review.user.name %> (<%= review.user.created_at.strftime("%b %d %Y  %l:%M %p") %>)</em>
  </p>
<% end %>

<h4>Post a review</h4>

<% if current_user %>
  <%= render 'reviews/form' %>
<% else %>
  <%= link_to "Please sign in.", new_session_path %>
<% end %>